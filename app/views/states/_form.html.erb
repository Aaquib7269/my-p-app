<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">States</h3>
        <div class="box-tools pull-right">
          <%= link_to 'Cancel', states_path, :class => 'btn btn-default btn-sm'%>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title"><%= params[:action] == 'edit' ? "Edit State" : 'New State'%></h3>
            </div>
            <%= form_for @state, :html => {:class => 'form-horizontal'} do |f| %>
                <div class="box-body">
                    <% if @state.errors.any? %>
                        <%= render :partial => "layouts/errors", :locals => {:errors => @state.errors} %>
                    <% end %>
                    <div class="form-group">
                        <label for="state[country]" class="col-sm-2 control-label">Country</label>
                        <div class="col-sm-10">
                          <%= f.select :country_id, Country.all.collect {|p| [ p.name, p.id ]}, {},:class => 'form-control' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="state[name]" class="col-sm-2 control-label">State Name</label>
                        <div class="col-sm-10">
                            <%= f.text_field :name, :class => 'form-control', :placeholder => 'State name' %>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-left">Submit</button>&nbsp;&nbsp;&nbsp;
                    <%= link_to "Cancel", states_path, :class => "btn btn-default"%>
                </div>
            <% end %>
        </div>
    </div>
</div>
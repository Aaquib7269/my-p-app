<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Comments</h3>
    </div>
    <div class="box-body">
        <table id="comments_table" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="sorting_disabled center" style="width: 31px !important"></th>
                    <th>Comment</th>
                    <th class="sorting_disabled">User</th>
                    <th class="sorting_disabled">Showing on App</th>
                    <th class="sorting_disabled">Created At</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="dataTables_empty" colspan="5">Loading comments from server</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
  $(document).ready(function(){
    $("#comments_table").dataTable({
        "bJQueryUI"       : true,
        "bProcessing"     : true,
        "bAutoWidth"      : false,
        "sPaginationType" : "full_numbers",
        "aoColumns"       : [{"sType" : "html"}, null, null, null, null, null],
        "aaSorting"       : [[0, 'asc'], [1, 'asc']],
        "bServerSide"     : true,
        "sAjaxSource"     : "/product_comments/<%= @product.id%>.json",
        "language": {
            "zeroRecords": "No comments found",
            "infoEmpty": "No comments available"
        }
    })
  })
</script>
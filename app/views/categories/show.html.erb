<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Categories</h3>
        <div class="box-tools pull-right">
          <%= link_to 'Back', categories_path, :class => 'btn btn-default btn-sm'%>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Category</h3>
            </div>
            <div class="box-body form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Category Name</label>
                    <div class="col-sm-10">
                        <%= @category.name %>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Parent category</label>
                    <div class="col-sm-10">
                        <%= @category.parent_category.blank? ? "" : @category.parent_category.name %>
                    </div>
                </div>
            </div>
            <div class="box-footer">
            	<%= link_to "Edit", edit_category_path(@category), :class => "btn btn-info pull-left"%>&nbsp;&nbsp;&nbsp;
                <%= link_to "Cancel", categories_path, :class => "btn btn-default"%>
            </div>
        </div>
    </div>
</div>